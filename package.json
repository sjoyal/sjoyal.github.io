  "license": "CC0",
  "bugs": {
    "url": "https://github.com/sjoyal/sjoyal.github.io/issues"
  },
  "homepage": "https://github.com/sjoyal/sjoyal.github.io",
  "devDependencies": {
    "bower": "^1.4.1",
    "browser-sync": "^2.7.10",
    "gulp": "^3.9.0",
    "gulp-sass": "^2.0.1",
    "node-sass": "^3.2.0",
    "wiredep": "^2.2.2"
  }
}
